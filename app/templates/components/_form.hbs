<div class="container-fluid">
  {{#if error}}
  <div class="col-xs-12">
    <div class="alert alert-danger">
      Unable to save component
    </div>
  </div>
  {{/if}}
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-12">
      <label>Name</label>
    </div>
    <div class="col-xs-8 col-md-6">
      {{input type="text" classBinding=":form-control :col-xs-6" value=model.name}}
    </div>
    <div class="col-xs-4 col-md-6">
      {{#if errors.name}}
      {{#each errors.name}}
      <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{message}}</span>
      {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-12">
      <label>Description</label>
    </div>
    <div class="col-xs-8 col-md-6">
      {{textarea classBinding=":form-control" cols="60" rows="10" value=model.description}}
    </div>
    <div class="col-xs-4 col-md-6">
      {{#if errors.description}}
      {{#each errors.description}}
      <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{message}}</span>
      {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="form-group tags-form col-xs-12 col-md-6">
    <div class="col-xs-12">
      <label>Tags</label>
    </div>
    <div class="col-xs-8 col-md-6">
      {{input type="text" classBinding=":form-control" value=tagInput action='addTag'}}
    </div>
    <div class="col-xs-4 col-md-6">
      {{#each tag in model.tags}}
      <span class="label label-default"><span class="glyphicon glyphicon-remove" {{action 'removeTag' tag}}></span> {{tag}}</span>
      {{/each}}
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-12">
      <label>Amount</label>
    </div>
    <div class="col-xs-12">
      {{view Ember.Select content=amountsSelection
                          value=model.amountId
                          optionValuePath="content.idInt"
                          optionLabelPath="content.name"}}
    </div>
  </div>
  {{#if needsValue}}
  <div class="clearfix"></div>
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-12">
      <label>Value</label>
    </div>
    <div class="col-xs-8 col-md-6">
      {{input type="text" classBinding=":form-control" value=model.amountValue}}
    </div>
    <div class="col-xs-4 col-md-6">
      {{#if errors.amountValue}}
      {{#each errors.amountValue}}
      <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{message}}</span>
      {{/each}}
      {{/if}}
    </div>
  </div>
  {{/if}}
  <div class="clearfix"></div>
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-4 col-md-2">
      <label>
	{{input type="checkbox" checked=model.spares}} Spares
      </label>
    </div>
    <div class="col-xs-4 col-md-6">
      {{#if errors.spares}}
      {{#each errors.spares}}
      <span class="has-error" style="line-height: 1.8;"><span class="glyphicon glyphicon-ban-circle"></span> {{message}}</span>
      {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-xs-12 col-md-6">
    <div class="col-xs-12">
      <button class="btn btn-primary" {{action 'saveComponent' model}}>Save</button>
    </div>
  </div>
</div>
