<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    {{#each model itemController='components.component'}}
    <tr>
      <td>{{link-to name 'components.show' id}}</td>
      <td>{{description}}</td>
      <td>{{amount}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
